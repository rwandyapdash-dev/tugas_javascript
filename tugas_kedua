<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Tugas 2 - Data Pegawai</title>
</head>
<body>
  <h2>Data Pegawai</h2>

  <table border="1" cellspacing="0" cellpadding="8">
    <thead>
      <tr>
        <th>Nama Pegawai</th>
        <th>Umur</th>
        <th>Jabatan</th>
        <th>Status</th>
        <th>Gaji Pokok</th>
        <th>Tunjangan Jabatan</th>
        <th>BPJS</th>
        <th>Tunjangan Keluarga</th>
        <th>Total Gaji</th>
      </tr>
    </thead>
    <tbody id="dataPegawai"></tbody>
    <tfoot id="totalGaji"></tfoot>
  </table>

  <script>
    // Data pegawai
    let nama = "Dodi Prayodi";
    let umur = 25;
    let jabatan = "Manajer";
    let status = "Menikah";

    // Gaji pokok (if)
    let gajiPokok = 0;
    if (jabatan === "Manajer") {
      gajiPokok = 15000000;
    } else if (jabatan === "Asisten Manajer") {
      gajiPokok = 10000000;
    } else if (jabatan === "Staff") {
      gajiPokok = 5000000;
    }

    // Tunjangan jabatan
    let tunjanganJabatan = 0.15 * gajiPokok;

    // BPJS
    let bpjs = 0.10 * gajiPokok;

    // Tunjangan keluarga (ternary)
    let tunjanganKeluarga = (status === "Menikah") ? 0.20 * gajiPokok : 0;

    // Total gaji
    let total = gajiPokok + tunjanganJabatan + bpjs + tunjanganKeluarga;

    // Cetak ke tabel
    document.getElementById("dataPegawai").innerHTML = `
      <tr>
        <td>${nama}</td>
        <td>${umur}</td>
        <td>${jabatan}</td>
        <td>${status}</td>
        <td>Rp ${gajiPokok.toLocaleString()}</td>
        <td>Rp ${tunjanganJabatan.toLocaleString()}</td>
        <td>Rp ${bpjs.toLocaleString()}</td>
        <td>Rp ${tunjanganKeluarga.toLocaleString()}</td>
        <td>Rp ${total.toLocaleString()}</td>
      </tr>
    `;
  </script>
</body>
</html>
